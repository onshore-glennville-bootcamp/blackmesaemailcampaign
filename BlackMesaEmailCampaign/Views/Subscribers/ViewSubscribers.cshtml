@model BLL.SubscribersVM

@using BLL;

@{
    ViewBag.Title = "Subscribers";
}

<h2>Subscribers</h2>

<div style="height: 225px; width: 35%; border: 1px solid #ccc; float: left; padding: 25px;">
    @using (Html.BeginForm("Index", "Mail", FormMethod.Post))
    {
        <table>
            <thead style="display: block;">
                <tr>
                    <th></th>
                    <th>@Html.ActionLink("Last Name", "ViewSubscribersByLastName", new { ViewBag.Sort })</th>
                    <th>@Html.ActionLink("First Name", "ViewSubscribersByFirstName", new { ViewBag.Sort })</th>
                </tr>
            </thead>
            <tbody style="height: 175px; overflow-y: scroll; display: block; ">
                @for (int i = 0; i < Model.Subscribers.Count; i++)
                {
                    @Html.HiddenFor(m => m.Subscribers[i].Email)
                    <tr>
                        <td>@Html.CheckBoxFor(m => m.Subscribers[i].EmailList)</td>
                        <td>@Model.Subscribers[i].LastName</td>
                        <td>@Model.Subscribers[i].FirstName</td>
                    </tr>
                }
            </tbody>
            <tfoot style="display: block;">
                <tr>
                    <th></th>
                    <th>
                        <input type="submit" value="Add to List">
                    </th>
                </tr>
            </tfoot>
        </table>
        
    }
</div>

<div style="height: 225px; border: 1px solid #ccc; overflow: auto; float: left; padding: 25px; margin-left: 10px;">
    @Html.Partial("SearchSubscribers")
</div>