@model BLL.SubscribersVM

@using BLL;

@{
    ViewBag.Title = "Subscribers";
}

<h2>Subscribers</h2>

@Html.ActionLink("Add Subscriber ", "Add")&Dagger;@Html.ActionLink(" Search For Subscriber","SearchSubscribers")

<table>
    <thead>
        <tr>
            <th width="200">@Html.ActionLink("Email", "ViewSubscribersByEmail", new { ViewBag.Sort })</th>
            <th width="200">@Html.ActionLink("Last Name", "ViewSubscribersByLastName", new { ViewBag.Sort })</th>
            <th width="200">@Html.ActionLink("First Name", "ViewSubscribersByFirstName", new { ViewBag.Sort })</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SubscriberVM subscriber in Model.Subscribers)
        {
            <tr>
                <td>@subscriber.Email</td>
                <td>@subscriber.LastName</td>
                <td>@subscriber.FirstName</td>
            </tr>
        }
    </tbody>
</table>