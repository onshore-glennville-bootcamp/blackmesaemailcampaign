@model BLL.SubscribersFM

@{
    ViewBag.Title = "Add";
}

<h2>Add Subscriber</h2>

@Html.ActionLink("View Subscriber", "ViewSubscribers")

@using (Html.BeginForm("Add", "Subscribers", FormMethod.Post))
{
    <div class="error">
        @ViewBag.ErrorMessage
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">Email Address</div>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">First Name</div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Last Name</div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <input type="submit" value="Add Subscriber" />

    </div>
}